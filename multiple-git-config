# First config for GitHub topuraihan85@gmail.com
Host primary
    HostName github.com
    User git
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/id_rsa
    IdentitiesOnly yes

# Second key for GitHub topu.raihan@green-delta.com
Host secondary
    HostName github.com
    User git
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/id_rsa_git_2
    IdentitiesOnly yes

# Personal key always for GitLab
Host gitlab.com
    HostName gitlab.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/id_rsa_gitlab
